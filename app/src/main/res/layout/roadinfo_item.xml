<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_height="500dp">
        <TextView
            android:id="@+id/tv_roadinfo_id"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="0.5"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_userName"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_prTime"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_prInfo"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/tv_roadinfo_prPic"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_roadArea"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_roadName"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_roadinfo_roadInfo"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

</RelativeLayout>
